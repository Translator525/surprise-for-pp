                    <script>
                        var count = 0;
                    
                        function like() {
                            count++;
                            document.getElementById("likeCount").innerText = count;
                    
                            for (var i = 1; i <= 9; i++) {
                                var message = document.getElementById("thankYouMessage" + i);
                                if (count >= 1 && count <= 6 && count === i) {
                                    message.style.display = "block";
                                } else {
                                    message.style.display = "none";
                                }
                            }
                    
                            if (count >= 7 && count <= 11) {
                                document.getElementById("thankYouMessage7").style.display = "block";
                            } else {
                                document.getElementById("thankYouMessage7").style.display = "none";
                            }
                    
                            if (count === 12) {
                                document.getElementById("thankYouMessage8").style.display = "block";
                            } else {
                                document.getElementById("thankYouMessage8").style.display = "none";
                            }
                    
                            if (count >= 13) {
                                document.getElementById("thankYouMessage9").style.display = "block";
                            } else {
                                document.getElementById("thankYouMessage9").style.display = "none";
                            }
                        }
                    </script>
                    
                    
                    
